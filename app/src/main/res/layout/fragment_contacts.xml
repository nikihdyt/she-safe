<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ContactsFragment">

    <TextView
        android:id="@+id/tv_contacts_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_contacts_subheadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your trusted people's number"
        app:layout_constraintTop_toBottomOf="@id/tv_contacts_headline"
        app:layout_constraintLeft_toLeftOf="@id/tv_contacts_headline"/>

    <TextView
        android:id="@+id/tv_contacts_subheadline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The app will then send messages to them when you are detected to be in danger."
        app:layout_constraintTop_toBottomOf="@id/tv_contacts_subheadline"
        app:layout_constraintLeft_toLeftOf="@id/tv_contacts_subheadline"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_contacts_subheadline_2"
        app:layout_constraintLeft_toLeftOf="@id/tv_contacts_subheadline"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Add Contact"/>

</androidx.constraintlayout.widget.ConstraintLayout>